<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="600.0" prefWidth="800.0" spacing="20.0" style="-fx-background-color: #F0F2F5;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.projectakhirbd.Guru.JadwalGuruMengajarController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <HBox alignment="CENTER_LEFT" spacing="10.0">
        <children>
            <Label text="Jadwal Mengajar Anda" textFill="#333333">
                <font>
                    <Font name="System Bold" size="24.0" />
                </font>
            </Label>
            <HBox alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS">
                <children>
                    <Button fx:id="backToMenuButton" mnemonicParsing="false" onAction="#handleBackToMenu" style="-fx-background-color: #007BFF; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" text="Kembali ke Menu">
                        <HBox.margin>
                            <Insets left="20.0" />
                        </HBox.margin>
                    </Button>
                </children>
            </HBox>
        </children>
    </HBox>
    <Separator prefWidth="200.0" />
    <HBox alignment="CENTER_LEFT" spacing="10.0">
        <children>
            <Label text="Pilih Hari:" />
            <ComboBox fx:id="hariFilterComboBox" prefWidth="150.0" promptText="Semua Hari" />
            <Button mnemonicParsing="false" onAction="#handleTampilkanJadwal" text="Tampilkan Jadwal" style="-fx-background-color: #007BFF; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" />
        </children>
    </HBox>
    <TableView fx:id="jadwalMengajarTable" VBox.vgrow="ALWAYS" style="-fx-border-color: #CCCCCC; -fx-border-radius: 5;">
        <columns>
            <TableColumn fx:id="hariColumn" prefWidth="100.0" text="Hari" />
            <TableColumn fx:id="jamMulaiColumn" prefWidth="100.0" text="Jam Mulai" />
            <TableColumn fx:id="jamSelesaiColumn" prefWidth="100.0" text="Jam Selesai" />
            <TableColumn fx:id="kelasColumn" prefWidth="150.0" text="Kelas" />
            <TableColumn fx:id="mataPelajaranColumn" prefWidth="250.0" text="Mata Pelajaran" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>
    <Label fx:id="statusMessageLabel" textFill="#007BFF" />
</VBox>
